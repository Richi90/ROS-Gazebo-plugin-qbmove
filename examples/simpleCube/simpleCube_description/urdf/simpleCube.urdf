<?xml version="1.0"?>
<robot name="simpleCube">

	
	<gazebo reference="Link1">
		<material>Gazebo/Orange</material>
	</gazebo>
	<gazebo reference="cube_base">
		<material>Gazebo/Gray</material>
	</gazebo>

    <link name="world">
    </link> 
    
    <joint name="dummy_base" type="floating">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <parent link="world"/>
        <child link="cube_base"/>
    </joint>

    <link name="cube_base">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="1.0"/>
            <inertia ixx="0.001" iyy="0.001" izz="0.001" ixy="0" ixz="0" iyz="0"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
				<mesh filename="package://simpleCube_description/meshes/qb_meshes/qb_base_flange_m.stl" />
            </geometry>	
        </visual> 
		<visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
				<mesh filename="package://simpleCube_description/meshes/qb_meshes/qbmove_frame_m.stl" />
            </geometry>	
        </visual>
        <collision>
            <origin xyz="0 0 0.034" rpy="0 0 0"/>
            <geometry>
                <box size="0.066 0.066 0.066"/>
            </geometry> 
        </collision>
    </link>

    <joint name="J1" type="revolute">
        <origin xyz="0 0 0.033" rpy="0 0 0"/>
        <parent link="cube_base"/>
        <child link="Link1"/>
		<limit effort="300" velocity="100" lower="-3.14" upper="3.14" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="Link1"> 
        <inertial>
            <origin xyz="-0.035 0 0.038" rpy="0 0 0"/>
            <mass value="0.20"/>
            <inertia ixx="0.001" iyy="0.001" izz="0.001" ixy="0" ixz="0" iyz="0"/>
        </inertial>	
        <visual>
            <origin xyz="0 0 0.022" rpy="1.57 0 0"/>
            <geometry>
                <mesh filename="package://simpleCube_description/meshes/qb_meshes/qbmove_pulley_m.stl" />
            </geometry>		
        </visual>
		<visual>
            <origin xyz="-0.035 0 0.038" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://simpleCube_description/meshes/onedof/demoshaft.stl" />
            </geometry>		
        </visual>
        <collision>
            <origin xyz="-0.035 0 0.038" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://simpleCube_description/meshes/onedof/demoshaft.stl" />
            </geometry> 
        </collision>
    </link>  

    <gazebo>
        <plugin name="advanced_vsa" filename="libadvanced_plugin.so">
            <joint>J1</joint>
        </plugin>
    </gazebo>

</robot>
